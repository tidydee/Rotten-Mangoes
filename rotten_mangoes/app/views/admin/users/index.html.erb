<h1>Rotten Mangoes - Admin User View</h1>

<%= link_to "Submit a movie", new_movie_path %>
<hr>
  <%= paginate @users %>

  <table class="table table-striped table-bordered">
    <tr>
      <th><%= link_to 'Email', :sort => "email" %></th>    
      <th><%= link_to 'First name', :sort => "firstname" %></th>
      <th><%= link_to 'Last name', :sort => "lastname" %></th>
      <th><%= link_to 'Admin user', :sort => "admin" %></th>
      <th><%= link_to 'Created at', :sort => "created_at" %></th>
    </tr>
      <% @users.each do |user| %>
        <tr>
          <td><p><%= link_to user.email, admin_user_path(user) %></p></td>
          <td><p><%= user.firstname %></p></td>
          <td><p><%= user.lastname %></p></td>
          <td><p><%= user.admin  %></p></td>
          <td><p><%= user.created_at %></p></td>
        </tr>
      <% end %>
  </table>

  <hr>