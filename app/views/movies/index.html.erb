
<h1>Rotten Mangoes</h1>

<%= link_to "Submit a movie", new_movie_path %><br>
<%= link_to "User Admin Panel", admin_users_path %>
<hr>

<%= form_tag({controller: "movies", action: "index"}, method: "get") do %>
  <%= label_tag(:query, "Search movie by:") %>
  Title: <%= text_field_tag(:query_title) %>&nbsp

  Director: <%= text_field_tag(:query_director) %>

  <%= submit_tag("Search") %>
<% end %>

<hr>

<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image), movie_path(movie) %>  
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %>&nbsp<%= movie.review_average %>/10</p>
  <hr>
<% end %>
